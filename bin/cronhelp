#! /bin/bash
echo '=================================='
echo '            COMMANDS'
echo '=================================='
echo '# create/edit crons'
echo 'crontab -e'
echo '# list crons'
echo 'crontab -l'
echo '=================================='
echo '    Understanding CRON Entrie'
echo '=================================='
echo '# example cron entry'
echo '0 4 * * * TZ="America/New_York" bash -lc "update_site -p -g"'
echo ' '
echo '# interpreted as...'
echo '  0 minutes'
echo '  4 hours'
echo '  * for day of month = every day'
echo '  * for month = every month'
echo '  * for day of week = means every day of week'
echo '  TZ= sets the timezone'
echo ' '
echo '# so it runs "update_site -p -g" at 4:00am ET every day'
echo ' '
echo 'For more documentation, go about halfway down https://crontab.guru/crontab.5.html'
echo 'til you see a table describing the parameters with text description of fields below'
echo ' '
echo 'Valid values:'
echo '  minute:       0-59 with 0=0 minutes after the hour'
echo '  hours:        0-23 with 0=mindnight'
echo '  day of month: 1-31 with 1=1st day of month'
echo '  month:        1-12 with 1=January (or Jan, Feb, Mar, etc.)'
echo '  day of week:  0-7  with 0=Sunday and 7=Sunday (or Mon, Tue, Wed, etc.)'
echo ' '
echo '  wild card:    * for any field means every value'
echo '                  e.g. * for day of week, means every day'
echo '  range:        separated by - means every value in range'
echo '                  e.g. 1-3 for hours means hours 1, 2, 3'
echo '  multi-value:  separated by , means each value'
echo '                  e.g. 1,3 for month means Jan, Mar'
echo '  step:         after / means skip over N-1 in range'
echo '                  e.g. 0-23/2 for hours means every other hour'
echo '=================================='
echo '       Example cron file'
echo '=================================='
echo '0 4 * * * TZ="America/New_York" bash -lc "update_site -p -g"'
echo ' '
echo 'means run "update_site -p -g" at 4:00am ET'
echo '=================================='
echo '       Example cron file'
echo '=================================='
echo 'CRON_TZ=America/New_York'
echo '0 3 * * * bash -lc "update_site -p -g"'
echo ' '
echo 'means all scripts run in ET timezone'
echo 'means run "update_site -p -g" at 3:00am ET'
echo '----------------------------------'

