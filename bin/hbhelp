#! /bin/bash
echo '----------------------------------'
echo ' List formulas managed on my mac'
echo '----------------------------------'
echo '--- list all that were installed using brew install ---'
echo 'brew list'
echo '--- list all that were installed using brew cask install ---'
echo 'brew cask list'
echo '--- list versions for a specific formula ---'
echo 'brew list --versions _FORMULA_NAME_'
echo '----------------------------------'
echo ' Install, update, uninstall NOTE: _VERSION_ optional.  Performs command on latest version if missing.'
echo '----------------------------------'
echo 'brew install _FORMULA_NAME_ _VERSION_'
echo 'brew cask install _FORMULA_NAME_ _VERSION_'
echo 'brew upgrade _FORMULA_NAME_'
echo 'brew uninstall _FORMULA_NAME_ _VERSION_'
echo 'brew cleanup _FORMULA_NAME_ # Removes older versions'
echo '----------------------------------'

