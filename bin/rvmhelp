#! /bin/bash
rubyhelp
echo ''
echo '----------------'
echo 'create gemset'
echo '----------------'
echo 'rvm use _NEW_GEMSET_NAME_ --create'
echo 'rvm use ruby-2.1.2@rails4.1 --create'
echo ''
echo '----------------'
echo 'listing'
echo '----------------'
echo '-- list all gemsets for all installed rubies'
echo 'rvm list gemsets'
echo ''
echo '-- list gemsets for current ruby version'
echo 'rvm gemset list'
echo ''
echo '-- list all gems in the current gemset'
echo 'gem list'
echo ''
echo '-- list outdated gems in the current gemset'
echo 'gem outdated'
echo ''
echo '----------------'
echo 'update outdated gems'
echo '----------------'
echo 'gem update'
echo ''
echo '----------------'
echo 'use a gemset'
echo '----------------'
echo 'rvm _GEMSET_NAME_'
echo 'rvm ruby-2.1.2@rails4.1'
echo ''
echo '----------------'
echo 'install specific rails verion'
echo '----------------'
echo '-- create gemset for the new rails version'
echo 'rvm use ruby-3.0.0@rails6.1.0'
echo 'gem install rails --version=6.1.0'
echo 'NOTE: leave off version on the install to get latest rails'
echo ''

