#! /bin/bash
echo '-------------------------------------------------'
echo 'SET UPSTREAM'
echo '-------------------------------------------------'
echo 'git remote -v'
echo '  verify this is the fork repo'
echo '  verify the upstream is not already setup.  You will see something like...'
echo '    origin  git@github.com:cul-it/exhibits-library-cornell-edu.git (fetch)'
echo '    origin  git@github.com:cul-it/exhibits-library-cornell-edu.git (push)'
echo ' '
echo 'git branch'
echo '  verify the main branch is checked out'
echo 'git checkout main'
echo '  only needed if not already checked out - Replace main with the actual name of the main branch in the fork repo (e.g. main, master, dev, etc.)'
echo 'git remote add upstream git@github.com:projectblacklight/spotlight.git'
echo '  replacing the spotlight URL with the source repo URL'
echo ' '
echo 'git remote -v'
echo '  verify the remote is now setup.  You will see something like...'
echo '    origin  git@github.com:cul-it/exhibits-library-cornell-edu.git (fetch)'
echo '    origin  git@github.com:cul-it/exhibits-library-cornell-edu.git (push)'
echo '    upstream	git@github.com:projectblacklight/spotlight.git (fetch)'
echo '    upstream	git@github.com:projectblacklight/spotlight.git (push)'
echo ' '
echo '-------------------------------------------------'
echo 'SYNC with UPSTREAM'
echo '-------------------------------------------------'
echo 'git fetch upstream'
echo '  If already up to date, it simply returns to prompt with no feedback'
echo '  If change to branches, it downloads upstream branches.  You will see something like...'
echo '    From github.com:projectblacklight/spotlight'
echo '     * [new branch]        1.0.0.alpha2                          -> upstream/1.0.0.alpha2'
echo '     * [new branch]        1324-role-based-home                  -> upstream/1324-role-based-home'
echo '     * [new branch]        1401-exhibit-tags                     -> upstream/1401-exhibit-tags'
echo ' '
echo 'git merge upstream/main'
echo '  Replace main with the actual name of the main branch in the fork repo (e.g. main, master, dev, etc.)'
echo '  If already up to date, you will see...'
echo '    Already up to date.'
echo '  If not, it merges upstream changes into fork repo.  You will see something like...'
echo '    Updating d09ee444..1c2dc079'
echo '    Fast-forward'
echo '     .github/workflows/ruby.yml                                                           |   45 ++'
echo '     .rubocop.yml                                                                         |   90 +++-'
echo '     .rubocop_todo.yml                                                                    |  446 +++++++++++++++++++-'
echo '     .travis.yml                                                                          |   53 ---'
echo '     README.md                                                                            |    2 +-'
echo '     app/assets/images/blacklight/arrow-alt-circle-left.svg                               |    1 +'
echo '     app/assets/images/blacklight/arrow-alt-circle-right.svg                              |    1 +'
echo ' '

