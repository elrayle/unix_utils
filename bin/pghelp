#! /bin/bash
echo '=================================='
echo 'Start/Restart/Stop'
echo '=================================='
echo '# installed by homebrew'
echo '# normally auto-starts with Mac startup'
echo 'brew services start postgresql'
echo 'brew services restart postgresql'
echo 'brew services stop postgresql'
echo ' '
echo '=================================='
echo 'Common Errors'
echo '=================================='
echo 'ERROR: psql: error: could not connect to server: No such file or directory (seen on command line)'
echo '  * can have many causes'
echo '  * get more info in /usr/local/var/log/postgres.log'
echo 'ERROR: psql FATAL: lock file "postmaster.pid" already exists (seen in log)'
echo '  * check pid at /usr/local/var/postgres/postmaster.pid'
echo '  SOLUTION:'
echo '    * try restarting (cmd above)'
echo '    * try stop followed by start (cmd above)'
echo '    * if still not working...'
echo '        $ brew services stop postgresql'
echo '        $ rm /usr/local/var/postgres/postmaster.pid'
echo '        $ brew services start postgresql'
echo '        $ psql postgres'
echo '        postgres=# \q'
echo '        $ '
echo ' '
echo '----------------------------------'

